@using DR.Escolaridade.Infra.CrossCutting.Filters
@model IEnumerable<DR.Escolaridade.Application.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (this.IfClaim("Cliente", "EX"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning" @Html.Raw(this.IfClaimShow("Cliente","ED"))>Editar</a>
                <a href="@Url.Action("Details", new { id = item.Id })")" class="btn btn-primary" @Html.Raw(this.IfClaimShow("Cliente", "DE"))>Detalhes</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" @Html.Raw(this.IfClaimShow("Cliente", "EXs"))>Excluir</a>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }).IfClaimHelper("Cliente", "EX")*@
            </td>
        </tr>
    }

</table>
